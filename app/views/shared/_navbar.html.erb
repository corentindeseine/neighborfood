      <%= link_to cookers_path do %>
        <div id="menu1" class="menuElement" data-nav-target = "menu1" >
          <i class="fas fa-home"></i>
        </div>
      <% end %>
      <%= link_to cart_orders_path do %>
        <div id="menu2" class="menuElement" data-nav-target = "menu2" >
          <% if user_signed_in? %>
            <div class="<%= 'cart-notification' unless current_user.orders.where(status: 0).empty? %> "  data-quantity-button-target="notification">
              <% unless current_user.orders.where(status: 0).empty? %>
                <% order_details = current_user.orders.where(status: 0).first.order_details %>
                <% sum = 0%>
                <% order_details.each { |d| sum += d.ordered_quantity } %>
                <%= sum %>
              <% end %>
            </div>
          <% end %>
          <i class="fas fa-shopping-bag"></i>
        </div>
      <% end %>
      <%= link_to  chatrooms_path do %>
        <div id="menu3" class="menuElement"data-nav-target = "menu3" >
          <i class="fas fa-comments"></i>
        </div>
      <% end %>
      <div id="menu4" class="menuElement"data-nav-target = "menu4" >
        <i class="fas fa-user "></i>
      </div>
    </div>
  </div>
